<% if (hdClass !== 'page-header') { %>
<header class="top-header" id="header">
    <div class="flex-row">
        <% if(theme.search){ %>
        <div class="search-wrap" id="search-wrap">
            <a href="javascript:;" class="header-icon" id="back">
                <i class="icon icon-lg icon-chevron-left"></i>
            </a>
            <input type="text" id="key" class="search-input" autocomplete="off" placeholder="<%= __('global.search_input_hint') %>">
            <a href="javascript:;" class="header-icon" id="search">
                <i class="icon icon-lg icon-search"></i>
            </a>
        </div>
        <% }%>
    </div>
</header>
<% } %>

<header class="content-header <%-hdClass %>">

    <div class="container">
        <h1 class="title"><%=title %></h1>
        <h5 class="subtitle">
            <% if(is_post()){ %>
                <%- partial('post/head-meta') %>
            <% } else if(is_home()){ %>
                <%- config.subtitle %>
            <% } else if (page.layout === 'page' && page.description) {%>
                <%- page.description %>
            <% } %>
        </h5>
    </div>

    <% if (hdClass === 'categories-header' || hdClass === 'tags-header') { %>
        <%- partial('tags-bar', { type: hdClass.split('-').shift() }) %>
    <% } %>

</header>
